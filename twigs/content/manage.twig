{% extends '@content/page.twig' %}

{% import '@util/formmacro.twig' as f %}

{# this brings in some useful macros for making bootstrap modals
{% import '@util/modalmacro.twig' as f %}
#}

{% block title %}
    Manage Account
{% endblock title %}

{% block type %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap">
{% endblock type %}

{% block css %}
    <link rel="stylesheet" href="{{assets}}/css/main.css">
    <link rel="stylesheet" href="{{assets}}/css/index.css">
{% endblock css %}

{% block scripts %}
{# <script src=""></script> for any other JS files you need #}
{% endblock scripts %}

{% block setup %}
{# Any javascript you need that is NOT run on load goes in this block. NB you don't need <script></script> tags  here #}
{% endblock setup %}

{% block onload %}
{# Any javascript you need that MUST run on load goes in this block. NB you don't need <script></script> tags  here #}
{% endblock onload %}

{% block main %}
    <section class="row">
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <div class="right">
                        <p>Username{{manage.name}}</p>
                    </div>
                    <h1>Manage Account</h1>
                </div>
                <div class="round-box-body">
                    <form id="aform" action="#" method="post" role="form">
                        <input type="hidden" name="details" value="1"/>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <input type="text" id="fn" name="name" placeholder="First Name" class="form-control" required="required"/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" id="ln" name="name" placeholder="Last Name" class="form-control" required="required"/>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-12">
                                        <input type="email" id="em" name="email" placeholder="Email address" class="form-control" required="required"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-row">
                                    <div class="form-group col-12">
                                        <input type="password" id="p1" name="password" placeholder="Password" class="form-control" required="required"/>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-12">
                                        <input type="password" id="p2" name="repeat" placeholder="Repeat" class="form-control" required="required"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <button class="btn btn-success" type="submit">Save</button>
                    </form>
                </div>
            </div>
        </article>
    </section>
{% endblock main %}
