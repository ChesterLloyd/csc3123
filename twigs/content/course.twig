{# Uncomment this if your page uses AJAX
{% set ajax = TRUE %}
#}

{% extends '@content/page.twig' %}

{% import '@util/formmacro.twig' as f %}
{% import '@util/modalmacro.twig' as m %}

{% block title %}
    Course Notes - {{course}}
{% endblock title %}

{% block type %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap">
{% endblock type %}

{% block css %}
    <link rel="stylesheet" href="{{assets}}/css/main.css">
    <link rel="stylesheet" href="{{assets}}/css/index.css">
{% endblock css %}

{% block scripts %}
{# <script src=""></script> for any other JS files you need #}
{% endblock scripts %}

{% block setup %}
{# Any javascript you need that is NOT run on load goes in this block. NB you don't need <script></script> tags  here #}
{% endblock setup %}

{% block onload %}
{% endblock onload %}

{% block main %}
    <section class="row">
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h1>{{course}} Notes</h1>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        <div class="col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{base}}/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="{{base}}/notes/">All Notes</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">{{course}}</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Top Notes</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        {% for key, file in tfiles %}
                            <div class="col-sm-12 col-md-12 col-lg-6">
                                <div class="card mb-3">
                                    <div class="row no-gutters">
                                        <div class="col-md-2 note-icon {{file.icon}}">
                                            <i class="fas fa-file-{{file.icon}} note-icon"></i>
                                        </div>
                                        <div class="col-md-10">
                                            <div class="card-body">
                                                <h5 class="card-title">{{tnotes[file.note_id].name}}</h5>
                                                <p class="card-text"><b>{{tnotes[file.note_id].module}}</b> - {{tnotes[file.note_id].description}}</p>
                                                <p class="card-text"><small class="text-muted">Uploaded {{tnotes[file.note_id].upload}}</small></p>
                                                <a href="{{base}}/view?note={{file.note_id}}" class="btn btn-primary">View</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>All Notes</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        {% for key, file in afiles %}
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <div class="card mb-3">
                                <div class="row no-gutters">
                                    <div class="col-md-2 note-icon {{file.icon}}">
                                        <i class="fas fa-file-{{file.icon}} note-icon"></i>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="card-body">
                                            <h5 class="card-title">{{anotes[file.note_id].name}}</h5>
                                            <p class="card-text"><b>{{anotes[file.note_id].module}}</b> - {{anotes[file.note_id].description}}</p>
                                            <p class="card-text"><small class="text-muted">Uploaded {{anotes[file.note_id].upload}}</small></p>
                                            <a href="{{base}}/view?note={{file.note_id}}" class="btn btn-primary">View</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>
    </section>
{% endblock main %}
