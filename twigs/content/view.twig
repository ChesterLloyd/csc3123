{# Uncomment this if your page uses AJAX
{% set ajax = TRUE %}
#}

{% extends '@content/page.twig' %}

{% import '@util/formmacro.twig' as f %}

{# this brings in some useful macros for making bootstrap modals
{% import '@util/modalmacro.twig' as f %}
#}

{% block title %}
    View note
{% endblock title %}

{% block type %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap">
{% endblock type %}

{% block css %}
    <link rel="stylesheet" href="{{assets}}/css/main.css">
    <link rel="stylesheet" href="{{assets}}/css/index.css">
{% endblock css %}

{% block scripts %}
{# <script src=""></script> for any other JS files you need #}
{% endblock scripts %}

{% block setup %}
{# Any javascript you need that is NOT run on load goes in this block. NB you don't need <script></script> tags  here #}
{% endblock setup %}

{% block onload %}
{# Any javascript you need that MUST run on load goes in this block. NB you don't need <script></script> tags  here #}
{% endblock onload %}

{% block main %}
    <section class="row">
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <div class="right">
                        <p>{{note.upload}}</p>
                        <p>Author's Name</p>
                    </div>
                    <h1>{{note.name}}</h1>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        <div class="col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/projects/csc3123/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="#">{{note.course}}</a></li>
                                    <li class="breadcrumb-item"><a href="#">{{note.module}}</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Notes</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h2>Description</h2>
                            <p>
                                {{note.description}}
                            </p>
                            <h2>Author's Comments</h2>
                            <p>
                                {{note.comment}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Files</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        <div class="col-12">
                            <table>
                                <tr>
                                    <th>File Name</th>
                                    <th>Type</th>
                                    <th>Size</th>
                                </tr>
                                {% for key, file in files %}
                                    <tr>
                                        <td><a href="#">{{file.name}}</a></td>
                                        <td>{{file.type}}</td>
                                        <td>{{file.size}}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Ratings</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="stars">
                                {% for star in range(1, 5) %}
                                    {% if star <= rating %}
                                        <span class="fa fa-star checked"></span>
                                    {% else %}
                                        <span class="fa fa-star"></span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <table class="stats">
                                <tr>
                                    <th>Rating</th>
                                    <td>{{rating}}</td>
                                </tr>
                                <tr>
                                    <th>Favourites</th>
                                    <td>{{favourites}}</td>
                                </tr>
                                <tr>
                                    <th>Number of downloads</th>
                                    <td>{{note.downloads}}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <a href="#" class="btn btn-success">Add Favourite</a>
                    <a href="#" class="btn btn-warning">Modify Note</a>
                </div>
            </div>
        </article>
    </section>
{% endblock main %}
