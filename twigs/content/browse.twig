{% extends '@content/page.twig' %}

{% block title %}
    {% if page is same as('course') %}
        Browse - {{course}}
    {% elseif page is same as('module') %}
        Browse - {{module}}
    {% endif %}
{% endblock title %}

{% block type %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap">
{% endblock type %}

{% block css %}
    <link rel="stylesheet" href="{{assets}}/css/main.css">
{% endblock css %}

{% block pageheader %}
{% endblock pageheader %}

{% block main %}
    <section class="row">
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h1>
                        {% if page is same as('course') %}
                            {{course}} Notes
                        {% elseif page is same as('module') %}
                            {{module}} Notes
                        {% endif %}
                    </h1>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        <div class="col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{base}}/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="{{base}}/notes/">All Notes</a></li>
                                    {% if page is same as('course') %}
                                        <li class="breadcrumb-item active" aria-current="page">{{course}}</li>
                                    {% elseif page is same as('module') %}
                                        <li class="breadcrumb-item"><a href="{{base}}/browse/course/{{course}}/">{{course}}</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">{{module}}</li>
                                    {% endif %}
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Top Notes</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        {% if top|length < 1 %}
                            <div class="col-12">
                                <p>No notes to display.</p>
                            </div>
                        {% else %}
                            {% for upload in top %}
                                <div class="col-sm-12 col-md-12 col-lg-6">
                                    <div class="card mb-3">
                                        <div class="row no-gutters">
                                            <div class="col-md-2 note-icon {{upload.icon}}">
                                                <i class="fas fa-{{upload.icon}} note-icon"></i>
                                            </div>
                                            <div class="col-md-10">
                                                <div class="card-body">
                                                    {% if upload.note.downloads >= 20 %}
                                                        <i class="fas fa-certificate download-badge"></i>
                                                    {% elseif upload.note.downloads >= 10 %}
                                                        <i class="fas fa-award download-badge"></i>
                                                    {% elseif upload.note.downloads >= 5 %}
                                                        <i class="fas fa-trophy download-badge"></i>
                                                    {% endif %}
                                                    <h5 class="card-title">{{upload.note.name}}</h5>
                                                    <p class="card-text"><b>{{upload.note.module}}</b> - {{upload.note.description}}</p>
                                                    <p class="card-text"><small class="text-muted">Uploaded {{upload.note.upload}}</small></p>
                                                    <a href="{{base}}/view/{{upload.note.getID}}/" class="btn btn-primary">View</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>All Notes</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        {% if notes|length < 1 %}
                            <div class="col-12">
                                <p>No notes to display.</p>
                            </div>
                        {% else %}
                            {% for upload in notes %}
                                <div class="col-sm-12 col-md-12 col-lg-6">
                                    <div class="card mb-3">
                                        <div class="row no-gutters">
                                            <div class="col-md-2 note-icon {{upload.icon}}">
                                                <i class="fas fa-{{upload.icon}} note-icon"></i>
                                            </div>
                                            <div class="col-md-10">
                                                <div class="card-body">
                                                    {% if upload.note.downloads >= 20 %}
                                                        <i class="fas fa-certificate download-badge"></i>
                                                    {% elseif upload.note.downloads >= 10 %}
                                                        <i class="fas fa-award download-badge"></i>
                                                    {% elseif upload.note.downloads >= 5 %}
                                                        <i class="fas fa-trophy download-badge"></i>
                                                    {% endif %}
                                                    <h5 class="card-title">{{upload.note.name}}</h5>
                                                    <p class="card-text"><b>{{upload.note.module}}</b> - {{upload.note.description}}</p>
                                                    <p class="card-text"><small class="text-muted">Uploaded {{upload.note.upload}}</small></p>
                                                    <a href="{{base}}/view/{{upload.note.getID}}/" class="btn btn-primary">View</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </article>
    </section>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}
