{% set ajax = TRUE %}

{% extends '@content/page.twig' %}

{% import '@util/formmacro.twig' as f %}

{% block title %}
    All Notes
{% endblock title %}

{% block type %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap">
{% endblock type %}

{% block css %}
    <link rel="stylesheet" href="{{assets}}/css/main.css">
{% endblock css %}

{% block onload %}
    $('.unfavourite').click(function() {
        var nid = $(this).data('note');
        $.post('{{base}}/ajax/removeFavourite/'+nid+'/', {
        }).done(function(data){
            $('#fn-'+nid).hide();
        }).fail(function(jqXHR, textStatus, errorThrown){
            bootbox.alert('<h3>Error</h3><br>'+jqXHR.responseText);
        });
    });
{% endblock onload %}

{% block pageheader %}
{% endblock pageheader %}

{% block main %}
    <section class="row">
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Find Notes</h2>
                </div>
                <div class="round-box-body">
                    {{f.startform({method: 'post', action: '/search/', id: 'search'})}}
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="search" id="search" aria-label="Search" aria-describedby="searchHelp" placeholder="Search for notes&hellip;"  aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-success" type="button">Search</button>
                            </div>
                        </div>
                    {{f.endform()}}
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Favourite Notes</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        {% if favourites|length < 1 %}
                            <div class="col-12">
                                <p>No notes to display.</p>
                            </div>
                        {% else %}
                            {% for upload in favourites %}
                                <div class="col-sm-12 col-md-12 col-lg-6" id="fn-{{upload.note.getID}}">
                                    <div class="card mb-3">
                                        <div class="row no-gutters">
                                            <div class="col-md-2 note-icon {{upload.icon}}">
                                                <i class="fas fa-{{upload.icon}} note-icon"></i>
                                            </div>
                                            <div class="col-md-10">
                                                <div class="card-body">
                                                    <h5 class="card-title">{{upload.note.name}}</h5>
                                                    <p class="card-text"><b>{{upload.note.module}}</b> - {{upload.note.description}}</p>
                                                    <p class="card-text"><small class="text-muted">Uploaded {{upload.note.upload}}</small></p>
                                                    <a href="{{base}}/view/{{upload.note.getID}}/" class="btn btn-primary">View</a>
                                                    <button type="button" class="btn btn-danger unfavourite" data-note="{{upload.note.getID}}">unFavourite</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Top Notes</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        {% if top|length < 1 %}
                            <div class="col-12">
                                <p>No notes to display.</p>
                            </div>
                        {% else %}
                            {% for upload in top %}
                                <div class="col-sm-12 col-md-12 col-lg-6">
                                    <div class="card mb-3">
                                        <div class="row no-gutters">
                                            <div class="col-md-2 note-icon {{upload.icon}}">
                                                <i class="fas fa-{{upload.icon}} note-icon"></i>
                                            </div>
                                            <div class="col-md-10">
                                                <div class="card-body">
                                                    <h5 class="card-title">{{upload.note.name}}</h5>
                                                    <p class="card-text"><b>{{upload.note.module}}</b> - {{upload.note.description}}</p>
                                                    <p class="card-text"><small class="text-muted">Uploaded {{upload.note.upload}}</small></p>
                                                    <a href="{{base}}/view/{{upload.note.getID}}/" class="btn btn-primary">View</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>All Notes</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        {% if notes|length < 1 %}
                            <div class="col-12">
                                <p>No notes to display.</p>
                            </div>
                        {% else %}
                            {% for upload in notes %}
                                <div class="col-sm-12 col-md-12 col-lg-6">
                                    <div class="card mb-3">
                                        <div class="row no-gutters">
                                            <div class="col-md-2 note-icon {{upload.icon}}">
                                                <i class="fas fa-{{upload.icon}} note-icon"></i>
                                            </div>
                                            <div class="col-md-10">
                                                <div class="card-body">
                                                    <h5 class="card-title">{{upload.note.name}}</h5>
                                                    <p class="card-text"><b>{{upload.note.module}}</b> - {{upload.note.description}}</p>
                                                    <p class="card-text"><small class="text-muted">Uploaded {{upload.note.upload}}</small></p>
                                                    <a href="{{base}}/view/{{upload.note.getID}}/" class="btn btn-primary">View</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </article>
    </section>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}
