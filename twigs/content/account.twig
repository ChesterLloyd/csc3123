{% set ajax = TRUE %}

{% extends '@content/page.twig' %}

{% import '@util/formmacro.twig' as f %}
{% import '@util/modalmacro.twig' as m %}

{% block title %}
    My Account
{% endblock title %}

{% block type %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap">
{% endblock type %}

{% block css %}
    <link rel="stylesheet" href="{{assets}}/css/main.css">
    <link rel="stylesheet" href="{{assets}}/css/index.css">
{% endblock css %}

{% block scripts %}
{# <script src=""></script> for any other JS files you need #}
{% endblock scripts %}

{% block setup %}
{# Any javascript you need that is NOT run on load goes in this block. NB you don't need <script></script> tags  here #}
{% endblock setup %}

{% block onload %}
    $('.unfavourite').click(function() {
        var nid = $(this).data('note');
        $.post('{{base}}/ajax/removeFavourite/'+nid+'/', {
        }).done(function(data){
            $('#fn-'+nid).hide();
        }).fail(function(jqXHR, textStatus, errorThrown){
            bootbox.alert('<h3>Error</h3><br>'+jqXHR.responseText);
        });
    });
{% endblock onload %}

{% block main %}
    <section class="row">
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <div class="right">
                        <p>Latest Upload: {{recent}}</p>
                        <p>{{user.login}}</p>
                    </div>
                    <h1>Your Dashboard</h1>
                </div>
                <br>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Recently Uploaded</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        {% for upload in ruploads %}
                            <div class="col-sm-12 col-md-12 col-lg-4">
                                <div class="card mb-3">
                                    <div class="row no-gutters">
                                        <div class="col-md-2 note-icon {{upload.icon}}">
                                            <i class="fas fa-{{upload.icon}} note-icon"></i>
                                        </div>
                                        <div class="col-md-10">
                                            <div class="card-body">
                                                <h5 class="card-title">{{upload.note.name}}</h5>
                                                <p class="card-text"><b>{{upload.note.module}}</b> - {{upload.note.description}}</p>
                                                <p class="card-text"><small class="text-muted">Uploaded {{upload.note.upload}}</small></p>
                                                <a href="{{base}}/view?note={{upload.note_id}}" class="btn btn-primary">View</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Favourites</h2>
                </div>
                <div class="round-box-body">
                    <div class="row">
                        {% for upload in favourites %}
                            <div class="col-sm-12 col-md-12 col-lg-4">
                                <div class="card mb-3">
                                    <div class="row no-gutters">
                                        <div class="col-md-2 note-icon {{upload.icon}}">
                                            <i class="fas fa-{{upload.icon}} note-icon"></i>
                                        </div>
                                        <div class="col-md-10">
                                            <div class="card-body">
                                                <h5 class="card-title">{{upload.note.name}}</h5>
                                                <p class="card-text"><b>{{upload.note.module}}</b> - {{upload.note.description}}</p>
                                                <p class="card-text"><small class="text-muted">Uploaded {{upload.note.upload}}</small></p>
                                                <a href="{{base}}/view?note={{upload.note_id}}" class="btn btn-primary">View</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>My Notes</h2>
                </div>
                <div class="round-box-body">
                    <table>
                        <tr>
                            <th>Name</th>
                            <th>Course</th>
                            <th>Module</th>
                            <th>Date</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                        {% for note in mnotes %}
                            <tr>
                                <td><a href="{{base}}/view?note={{note.id}}">{{note.name}}</a></td>
                                <td>{{note.course}}</td>
                                <td>{{note.module}}</td>
                                <td>{{note.upload}}</td>
                                <td></td>
                                <td></td>
                            </tr>
                        {% endfor %}
                    </table>
                    <a href="{{base}}/add/" class="btn btn-success">Upload Notes</a>
                </div>
            </div>
        </article>
        <article class="col-md-12">
            <div class="round-box">
                <div class="round-box-heading">
                    <h2>Account Info</h2>
                </div>
                <div class="round-box-body">
                    <table class="stats">
                        <tr>
                            <th>Username</th>
                            <td>{{user.login}}</td>
                        </tr>
                        <tr>
                            <th>Favourites</th>
                            <td>{{nfavourites}}</td>
                        </tr>
                        <tr>
                            <th>Last Upload</th>
                            <td>{{recent}}</td>
                        </tr>
                    </table>
                    <a href="#" class="btn btn-warning">Manage Account</a>
                </div>
            </div>
        </article>
    </section>
{% endblock main %}
